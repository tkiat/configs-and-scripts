#!/usr/bin/env dash
src_dir=~/.config/ungoogled-chromium/Default
target_dir=~/Sync/Personal-Cloud/App/Chromium

if ! [ -d $src_dir ]; then
  echo "Source directory ${src_dir} not found"
  exit 1
fi

if ! [ -d $target_dir ]; then
  echo "Target directory ${target_dir} not found"
  exit 1
fi

bookmark_filename="bookmark-Chromium-$(date +'%Y_%m_%d').json"
cd $target_dir || exit
rm -f bookmark-Chromium-*
cp "$src_dir/Bookmarks" "$bookmark_filename"
