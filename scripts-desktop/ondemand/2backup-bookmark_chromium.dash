#!/usr/bin/env dash
src=~/.config/chromium/Default/Bookmarks
target_dir=~/Sync/Personal-Cloud/App/Chromium

if ! [ -d $src ]; then
  echo "Source file ${src} not found. Exiting ..."
  exit 1
fi

if ! [ -d $target_dir ]; then
  echo "Target directory ${target_dir} not found. Exiting ..."
  exit 1
fi

bookmark_filename="bookmark-Chromium-$(date +'%Y_%m_%d').json"
rm -f "$target_dir/bookmark-Chromium-*"
cp "$src" "$target_dir/$bookmark_filename"
