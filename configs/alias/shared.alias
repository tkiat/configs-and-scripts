      2source() {
        if [[ $# -eq 0 ]] ; then
          echo 'usage: 2source <program>'
        fi;

        local c=
        case "$1" in
          bash) c="source ~/.bashrc" ;;
        esac

        if [ -n "$c" ]; then
          echo "$c"; eval "$c"
        else
          echo unknown arguments
        fi;
      }
      2umount() {
        if [[ $# -eq 0 || $1 -eq '-h' ]] ; then
            echo 'usage: 2umount <letter x in disk label: sdx> <luks (optional)>'
            if [[ $# -eq 0 ]] ; then return 1; else return 0; fi
        fi;

        if [[ $# -eq 1 ]] ; then
          echo 'unmounting a disk ...'
          sudo umount /mnt/sd${1}
        elif [[ $2 -eq 'luks' ]] ; then
          echo 'unmounting an encrypted disk ...'
          sudo umount /mnt/sd${1}
          sudo cryptsetup luksClose /dev/mapper/sd${1}
        fi;
      }
