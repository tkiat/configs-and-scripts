      2mount() {
        if [[ $# -eq 0 ]] ; then
            echo 'usage: 2mount <letter x in disk label: sdx> <luks (optional)>'
        fi;

        if [[ $# -eq 1 ]] ; then
          echo 'mounting a disk ...'
          sudo mount /dev/sd${1} /mnt/sd${1}
        elif [[ $2 -eq 'luks' ]] ; then
          echo 'mounting an encrypted disk ...'
          sudo cryptsetup luksOpen /dev/sd${1} sd${1}
          sudo mount /dev/mapper/sd${1} /mnt/sd${1}
        fi;
      }
